<shuxc:ScopedPage
    x:Class="Snap.Hutao.UI.Xaml.View.Page.WikiAvatarPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cw="using:CommunityToolkit.WinUI"
    xmlns:cwc="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mxi="using:Microsoft.Xaml.Interactivity"
    xmlns:shmma="using:Snap.Hutao.Model.Metadata.Avatar"
    xmlns:shmmi="using:Snap.Hutao.Model.Metadata.Item"
    xmlns:shux="using:Snap.Hutao.UI.Xaml"
    xmlns:shuxb="using:Snap.Hutao.UI.Xaml.Behavior"
    xmlns:shuxc="using:Snap.Hutao.UI.Xaml.Control"
    xmlns:shuxca="using:Snap.Hutao.UI.Xaml.Control.AutoSuggestBox"
    xmlns:shuxcc="using:Snap.Hutao.UI.Xaml.Control.Card"
    xmlns:shuxci="using:Snap.Hutao.UI.Xaml.Control.Image"
    xmlns:shuxcp="using:Snap.Hutao.UI.Xaml.Control.Panel"
    xmlns:shuxct="using:Snap.Hutao.UI.Xaml.Control.TextBlock"
    xmlns:shuxdc="using:Snap.Hutao.UI.Xaml.Data.Converter"
    xmlns:shuxdcs="using:Snap.Hutao.UI.Xaml.Data.Converter.Specialized"
    xmlns:shuxm="using:Snap.Hutao.UI.Xaml.Markup"
    xmlns:shuxvs="using:Snap.Hutao.UI.Xaml.View.Specialized"
    xmlns:shvc="using:Snap.Hutao.ViewModel.Complex"
    xmlns:shvw="using:Snap.Hutao.ViewModel.Wiki"
    d:DataContext="{d:DesignInstance Type=shvw:WikiAvatarViewModel}"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <mxi:Interaction.Behaviors>
        <shuxb:InvokeCommandOnLoadedBehavior Command="{Binding LoadCommand}"/>
    </mxi:Interaction.Behaviors>
    <Page.Resources>
        <shuxdc:VisibilityToObjectConverter
            x:Key="VisibilityToColumnSpanConverter"
            CollapsedValue="{shuxm:Int32 Value=2}"
            VisibleValue="{shuxm:Int32 Value=1}"/>

        <shuxdcs:RangedInt32Converter x:Key="RangedInt32Converter"/>

        <shux:BindingProxy x:Key="BindingProxy" DataContext="{Binding}"/>

        <DataTemplate x:Key="SkillDataTemplate" x:DataType="shmma:ProudSkill">
            <Grid Margin="0,16,0,0" ColumnSpacing="16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <shuxct:DescriptionTextBlock
                    Grid.ColumnSpan="{Binding ElementName=ProudSelector, Path=Visibility, Converter={StaticResource VisibilityToColumnSpanConverter}}"
                    VerticalAlignment="Top"
                    Description="{Binding Description}"
                    LinkContext="{Binding DataContext.LinkContext, Source={StaticResource BindingProxy}}"
                    TextStyle="{StaticResource BodyTextBlockStyle}"/>
                <shuxvs:DescParamComboBox
                    x:Name="ProudSelector"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    PreferredSelectedIndex="9"
                    Source="{Binding Proud, Mode=OneWay, Converter={StaticResource DescParamDescriptor}}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="TalentDataTemplate" x:DataType="shmma:Skill">
            <shuxct:DescriptionTextBlock
                Margin="0,12,0,0"
                Description="{Binding Description}"
                LinkContext="{Binding DataContext.LinkContext, Source={StaticResource BindingProxy}}"
                TextStyle="{StaticResource BodyTextBlockStyle}"/>
        </DataTemplate>

        <DataTemplate x:Key="TokenTemplate" x:DataType="shuxca:SearchToken">
            <Grid Height="22" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Ellipse
                    Grid.Column="0"
                    Width="12"
                    Height="12"
                    Margin="1,1,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Visibility="{Binding Quality, Converter={StaticResource EmptyObjectToVisibilityConverter}}">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="{Binding Quality}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <shuxci:CachedImage
                    Grid.Column="0"
                    Width="20"
                    Height="20"
                    Margin="-3,2,7,0"
                    ShowAsMonoChrome="True"
                    Source="{Binding IconUri, Mode=OneWay}"
                    Visibility="{Binding IconUri, Converter={StaticResource EmptyObjectToVisibilityConverter}}"/>
                <shuxci:CachedImage
                    Grid.Column="0"
                    Width="20"
                    Height="20"
                    Margin="-4,-2,8,2"
                    Source="{Binding SideIconUri, Mode=OneWay}"
                    Visibility="{Binding SideIconUri, Converter={StaticResource EmptyObjectToVisibilityConverter}}"/>
                <TextBlock
                    Grid.Column="1"
                    Height="20"
                    VerticalAlignment="Center"
                    Text="{Binding Value}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="AvatarListTemplate" x:DataType="shmma:Avatar">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <shuxci:CachedImage
                    Grid.Column="0"
                    Width="48"
                    Height="48"
                    Margin="0,0,12,12"
                    Source="{Binding SideIcon, Converter={StaticResource AvatarSideIconConverter}, Mode=OneWay}"/>
                <TextBlock
                    Grid.Column="1"
                    Margin="12,0,0,0"
                    VerticalAlignment="Center"
                    Text="{Binding Name}"/>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="CultivationItemTemplate" x:DataType="shmmi:Material">
            <shuxcc:HorizontalCard>
                <shuxcc:HorizontalCard.Left>
                    <shuxc:ItemIcon
                        Width="40"
                        Height="40"
                        Icon="{Binding Icon, Converter={StaticResource ItemIconConverter}}"
                        Quality="{Binding RankLevel}"/>
                </shuxcc:HorizontalCard.Left>
                <shuxcc:HorizontalCard.Right>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Text="{Binding Name}"/>
                </shuxcc:HorizontalCard.Right>
            </shuxcc:HorizontalCard>
        </DataTemplate>

        <DataTemplate x:Key="CollocationTemplate" x:DataType="shvc:CollocationView">
            <shuxcc:HorizontalCard>
                <shuxcc:HorizontalCard.Left>
                    <shuxc:ItemIcon
                        Width="48"
                        Height="48"
                        Icon="{Binding Icon}"
                        Quality="{Binding Quality}"/>
                </shuxcc:HorizontalCard.Left>
                <shuxcc:HorizontalCard.Right>
                    <StackPanel Margin="8,0,0,0" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding Name}"/>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock
                                Opacity="0.7"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{Binding Rate}"/>
                            <shuxct:RateDeltaTextBlock
                                Opacity="0.7"
                                Text="{Binding RateDelta}"
                                TextStyle="{StaticResource CaptionTextBlockStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </shuxcc:HorizontalCard.Right>
            </shuxcc:HorizontalCard>
        </DataTemplate>

        <DataTemplate x:Key="CollocationReliquaryTemplate" x:DataType="shvc:ReliquarySetView">
            <shuxcc:HorizontalCard>
                <shuxcc:HorizontalCard.Left>
                    <cwc:SwitchPresenter Value="{Binding Icons.Count, Mode=OneWay}">
                        <cwc:Case IsDefault="True">
                            <cwc:Case.Value>
                                <x:Int32>0</x:Int32>
                            </cwc:Case.Value>
                            <Grid>
                                <shuxc:ItemIcon
                                    Width="48"
                                    Height="48"
                                    Icon="{StaticResource UI_ItemIcon_None}"
                                    Quality="QUALITY_ORANGE"/>
                            </Grid>
                        </cwc:Case>
                        <cwc:Case>
                            <cwc:Case.Value>
                                <x:Int32>1</x:Int32>
                            </cwc:Case.Value>
                            <Grid>
                                <shuxc:ItemIcon
                                    Width="48"
                                    Height="48"
                                    Icon="{Binding Icons[0]}"
                                    Quality="QUALITY_ORANGE"/>
                            </Grid>
                        </cwc:Case>
                        <cwc:Case>
                            <cwc:Case.Value>
                                <x:Int32>2</x:Int32>
                            </cwc:Case.Value>
                            <Grid>
                                <shuxc:ItemIcon
                                    Width="48"
                                    Height="48"
                                    Quality="QUALITY_ORANGE"/>
                                <shuxci:CachedImage
                                    Width="32"
                                    Margin="2,2,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Source="{Binding Icons[0]}"/>
                                <shuxci:CachedImage
                                    Width="32"
                                    Margin="0,0,2,2"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Source="{Binding Icons[1]}"/>
                            </Grid>
                        </cwc:Case>
                    </cwc:SwitchPresenter>
                </shuxcc:HorizontalCard.Left>
                <shuxcc:HorizontalCard.Right>
                    <StackPanel Margin="8,0,8,0" HorizontalAlignment="Left">
                        <TextBlock
                            Text="{Binding Name}"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="NoWrap"/>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock
                                Opacity="0.7"
                                Style="{StaticResource CaptionTextBlockStyle}"
                                Text="{Binding Rate}"/>
                            <shuxct:RateDeltaTextBlock
                                Opacity="0.7"
                                Text="{Binding RateDelta}"
                                TextStyle="{StaticResource CaptionTextBlockStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </shuxcc:HorizontalCard.Right>
            </shuxcc:HorizontalCard>
        </DataTemplate>

        <DataTemplate x:Key="CostumeTemplate" x:DataType="shmma:Costume">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <shuxci:CachedImage
                    Width="80"
                    Height="80"
                    Margin="0,0,16,0"
                    Source="{StaticResource UI_AvatarIcon_Costume_Card}"/>
                <shuxci:CachedImage
                    Grid.Column="0"
                    Width="80"
                    Height="80"
                    Margin="0,0,16,0"
                    Source="{Binding FrontIcon, Converter={StaticResource AvatarCardConverter}}"/>
                <StackPanel Grid.Column="1" Margin="0,0,16,-4">
                    <TextBlock Text="{Binding Name}"/>
                    <shuxct:DescriptionTextBlock
                        Margin="0,8,0,16"
                        Description="{Binding Description}"
                        TextStyle="{StaticResource CaptionTextBlockStyle}"/>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="FetterStoryTemplate" x:DataType="shmma:Fetter">
            <cwc:SettingsCard Padding="16,8,8,8" BorderBrush="{ThemeResource ControlStrokeColorDefaultBrush}">
                <cwc:SettingsCard.Header>
                    <shuxct:DescriptionTextBlock Description="{Binding Title}" TextStyle="{StaticResource BaseTextBlockStyle}"/>
                </cwc:SettingsCard.Header>
                <cwc:SettingsCard.Description>
                    <shuxct:DescriptionTextBlock Description="{Binding Context}" TextStyle="{StaticResource CaptionTextBlockStyle}"/>
                </cwc:SettingsCard.Description>
            </cwc:SettingsCard>
        </DataTemplate>

        <DataTemplate x:Key="AvatarGridTemplate" x:DataType="shmma:Avatar">
            <shuxcc:VerticalCard Width="82">
                <shuxcc:VerticalCard.Top>
                    <shuxc:ItemIcon Icon="{Binding Icon, Converter={StaticResource AvatarIconConverter}, Mode=OneWay}" Quality="{Binding Quality}"/>
                </shuxcc:VerticalCard.Top>
                <shuxcc:VerticalCard.Bottom>
                    <TextBlock
                        Margin="2,0"
                        Text="{Binding Name}"
                        TextTrimming="CharacterEllipsis"/>
                </shuxcc:VerticalCard.Bottom>
            </shuxcc:VerticalCard>
        </DataTemplate>
    </Page.Resources>

    <shuxc:StandardView ShowCondition="{Binding Avatars, Converter={StaticResource EmptyObjectToBoolConverter}}">
        <shuxc:StandardView.EmptyContent>
            <shuxc:Loading IsLoading="{Binding Avatars, Converter={StaticResource EmptyObjectToBoolRevertConverter}}" Style="{ThemeResource DefaultLoadingViewStyle}"/>
        </shuxc:StandardView.EmptyContent>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Margin="16" cw:Effects.Shadow="{ThemeResource CompatCardShadow}">
                <Border Style="{ThemeResource AcrylicBorderCardStyle}">
                    <CommandBar
                        Grid.Row="0"
                        BorderBrush="{x:Null}"
                        BorderThickness="0"
                        DefaultLabelPosition="Right">
                        <CommandBar.Content>
                            <shuxc:LayoutSwitch
                                x:Name="ItemsPanelSelector"
                                Margin="8,8,0,0"
                                LocalSettingKeySuffixForCurrent="WikiAvatarPage.Avatars"/>
                        </CommandBar.Content>
                        <AppBarElementContainer>
                            <shuxca:AutoSuggestTokenBox
                                Width="600"
                                Height="44"
                                Margin="6,-2,6,6"
                                HorizontalAlignment="Right"
                                VerticalContentAlignment="Center"
                                AvailableTokens="{Binding SearchData.AvailableTokens}"
                                FilterCommand="{Binding FilterCommand}"
                                ItemsSource="{Binding SearchData.FilterTokens, Mode=TwoWay}"
                                MaximumTokens="5"
                                PlaceholderText="{shuxm:ResourceString Name=ViewPageWiKiAvatarAutoSuggestBoxPlaceHolder}"
                                QueryIcon="{cw:FontIconSource Glyph=&#xE721;}"
                                Style="{StaticResource DefaultAutoSuggestTokenBoxStyle}"
                                SuggestedItemTemplate="{StaticResource TokenTemplate}"
                                SuggestedItemsSource="{Binding SearchData.AvailableTokens.Values}"
                                Text="{Binding SearchData.FilterToken, Mode=TwoWay}"
                                TokenItemTemplate="{StaticResource TokenTemplate}"/>
                        </AppBarElementContainer>
                        <AppBarButton
                            Command="{Binding CultivateCommand}"
                            CommandParameter="{Binding Avatars.CurrentItem}"
                            Icon="{shuxm:FontIcon Glyph=&#xE8EF;}"
                            Label="{shuxm:ResourceString Name=ViewPageWiKiGeneralAddToDevPlanButtonLabel}"/>
                    </CommandBar>
                </Border>
            </Border>

            <cwc:SwitchPresenter
                Grid.Row="1"
                ContentTransitions="{ThemeResource EntranceThemeTransitions}"
                Value="{Binding ElementName=ItemsPanelSelector, Path=Current}">
                <cwc:Case Value="List">
                    <Border Margin="16,0,16,16" cw:Effects.Shadow="{ThemeResource CompatCardShadow}">
                        <Border Style="{ThemeResource AcrylicBorderCardStyle}">
                            <SplitView
                                DisplayMode="Inline"
                                IsPaneOpen="True"
                                OpenPaneLength="{StaticResource CompatSplitViewOpenPaneLength}"
                                PaneBackground="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                                <SplitView.Pane>
                                    <ListView
                                        Padding="{ThemeResource ListViewInSplitPanePadding}"
                                        ItemTemplate="{StaticResource AvatarListTemplate}"
                                        ItemsSource="{Binding Avatars}"
                                        SelectedItem="{Binding Avatars.CurrentItem, Mode=TwoWay}"
                                        SelectionMode="Single">
                                        <mxi:Interaction.Behaviors>
                                            <shuxb:SelectedItemInViewBehavior/>
                                        </mxi:Interaction.Behaviors>
                                    </ListView>
                                </SplitView.Pane>
                                <SplitView.Content>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center" Visibility="{Binding Avatars.CurrentItem, Converter={StaticResource EmptyObjectToVisibilityRevertConverter}}">
                                            <shuxci:CachedImage
                                                Height="120"
                                                MinWidth="{ThemeResource SettingsCardContentControlMinWidth}"
                                                Source="{StaticResource UI_EmotionIcon89}"/>
                                            <TextBlock
                                                Margin="0,5,0,21"
                                                HorizontalAlignment="Center"
                                                Style="{StaticResource SubtitleTextBlockStyle}"
                                                Text="{shuxm:ResourceString Name=ControlAutoSuggestBoxNotFoundValue}"/>
                                        </StackPanel>
                                        <ScrollViewer
                                            Padding="16,0"
                                            shuxc:ScrollViewerHelper.ScrollToTopAssociatedObject="{Binding Avatars.CurrentItem}"
                                            Visibility="{Binding Avatars.CurrentItem, Converter={StaticResource EmptyObjectToVisibilityConverter}}">
                                            <StackPanel
                                                Margin="0,16"
                                                HorizontalAlignment="Left"
                                                Spacing="16">
                                                <!--  简介  -->
                                                <Grid Style="{ThemeResource GridShimmerStyle}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Column="0" Margin="16">
                                                        <Grid Margin="0,0,0,12" ColumnSpacing="8">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition Width="auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <shuxci:CachedImage
                                                                Grid.Column="0"
                                                                Width="32"
                                                                Height="32"
                                                                HorizontalAlignment="Left"
                                                                ShowAsMonoChrome="True"
                                                                Source="{Binding Avatars.CurrentItem.FetterInfo.VisionBefore, Converter={StaticResource ElementNameIconConverter}}"/>
                                                            <shuxci:CachedImage
                                                                Grid.Column="1"
                                                                Width="32"
                                                                Height="32"
                                                                ShowAsMonoChrome="True"
                                                                Source="{Binding Avatars.CurrentItem.Weapon, Converter={StaticResource WeaponTypeIconConverter}}"/>
                                                        </Grid>
                                                        <Border Style="{ThemeResource BorderCardStyle}">
                                                            <shuxc:ItemIcon
                                                                Width="128"
                                                                Height="128"
                                                                Icon="{Binding Avatars.CurrentItem.Icon, Converter={StaticResource AvatarIconConverter}, Mode=OneWay}"
                                                                Quality="{Binding Avatars.CurrentItem.Quality, Mode=OneWay}"/>
                                                        </Border>

                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="0"
                                                        Grid.Column="1"
                                                        Margin="16">
                                                        <StackPanel Margin="0,0,0,2" Orientation="Horizontal">
                                                            <TextBlock
                                                                VerticalAlignment="Center"
                                                                Style="{StaticResource SubtitleTextBlockStyle}"
                                                                Text="{Binding Avatars.CurrentItem.Name}"
                                                                TextWrapping="NoWrap"/>
                                                            <TextBlock
                                                                Margin="24,0,0,0"
                                                                VerticalAlignment="Center"
                                                                Style="{StaticResource SubtitleTextBlockStyle}"
                                                                Text="{Binding Avatars.CurrentItem.FetterInfo.Title}"
                                                                TextWrapping="NoWrap"/>
                                                        </StackPanel>

                                                        <TextBlock
                                                            Opacity="0.7"
                                                            Style="{StaticResource CaptionTextBlockStyle}"
                                                            Text="{Binding Avatars.CurrentItem.FetterInfo.Detail}"
                                                            TextWrapping="NoWrap"/>

                                                        <cwc:UniformGrid
                                                            Margin="0,16,0,0"
                                                            ColumnSpacing="6"
                                                            Columns="4">
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarDateofBirthTitle}"/>
                                                                <TextBlock
                                                                    Margin="0,6,0,0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Text="{Binding Avatars.CurrentItem.FetterInfo.BirthFormatted}"
                                                                    TextWrapping="NoWrap"/>
                                                            </StackPanel>
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarOccupationNameTitle}"/>
                                                                <TextBlock
                                                                    Margin="0,6,0,0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Text="{Binding Avatars.CurrentItem.FetterInfo.Native}"
                                                                    TextWrapping="NoWrap"/>
                                                            </StackPanel>
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{Binding Avatars.CurrentItem.FetterInfo.VisionOverride}"/>
                                                                <TextBlock
                                                                    Margin="0,6,0,0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Text="{Binding Avatars.CurrentItem.FetterInfo.Vision}"
                                                                    TextWrapping="NoWrap"/>
                                                            </StackPanel>
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarConstellationNameTitle}"/>
                                                                <TextBlock
                                                                    Margin="0,6,0,0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Text="{Binding Avatars.CurrentItem.FetterInfo.Constellation}"
                                                                    TextWrapping="NoWrap"/>
                                                            </StackPanel>

                                                        </cwc:UniformGrid>

                                                        <cwc:UniformGrid
                                                            Margin="0,12,0,0"
                                                            ColumnSpacing="6"
                                                            Columns="4">
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarChineseCVNameTitle}"/>
                                                                <TextBlock
                                                                    Margin="0,6,0,0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Text="{Binding Avatars.CurrentItem.FetterInfo.CvChinese}"
                                                                    TextWrapping="NoWrap"/>
                                                            </StackPanel>
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarJapaneseCVNameTitle}"/>
                                                                <TextBlock
                                                                    Margin="0,6,0,0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Text="{Binding Avatars.CurrentItem.FetterInfo.CvJapanese}"
                                                                    TextWrapping="NoWrap"/>
                                                            </StackPanel>
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarEnglishCVNameTitle}"/>
                                                                <TextBlock
                                                                    Margin="0,6,0,0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Text="{Binding Avatars.CurrentItem.FetterInfo.CvEnglish}"
                                                                    TextWrapping="NoWrap"/>
                                                            </StackPanel>
                                                            <StackPanel>
                                                                <TextBlock Style="{StaticResource BaseTextBlockStyle}" Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarKoreanCVNameTitle}"/>
                                                                <TextBlock
                                                                    Margin="0,6,0,0"
                                                                    Style="{StaticResource CaptionTextBlockStyle}"
                                                                    Text="{Binding Avatars.CurrentItem.FetterInfo.CvKorean}"
                                                                    TextWrapping="NoWrap"/>
                                                            </StackPanel>
                                                        </cwc:UniformGrid>
                                                    </StackPanel>

                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Grid.Column="0"
                                                        Grid.ColumnSpan="2">
                                                        <ItemsControl
                                                            Margin="16,0,16,16"
                                                            ItemTemplate="{StaticResource CultivationItemTemplate}"
                                                            ItemsSource="{Binding Avatars.CurrentItem.CultivationItemsView}">
                                                            <ItemsControl.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <cwc:UniformGrid
                                                                        ColumnSpacing="8"
                                                                        Columns="3"
                                                                        RowSpacing="8"/>
                                                                </ItemsPanelTemplate>
                                                            </ItemsControl.ItemsPanel>
                                                        </ItemsControl>
                                                    </StackPanel>
                                                </Grid>

                                                <!--  攻略  -->
                                                <shuxcp:EqualPanel Spacing="16">
                                                    <Button
                                                        Padding="16,8"
                                                        HorizontalContentAlignment="Stretch"
                                                        Command="{Binding StrategyComponent.ChineseStrategyCommand}"
                                                        CommandParameter="{Binding Avatars.CurrentItem}"
                                                        Style="{ThemeResource SettingButtonStyle}">
                                                        <Grid ColumnSpacing="16">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>
                                                            <Border
                                                                Grid.Column="0"
                                                                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                                                CornerRadius="4">
                                                                <Image
                                                                    Width="24"
                                                                    Height="24"
                                                                    Source="ms-appx:///Resource/ThirdParty/miyoushe128.png"/>
                                                            </Border>

                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarStrategyChineseButtonLabel}"
                                                                TextWrapping="NoWrap"/>
                                                        </Grid>
                                                    </Button>
                                                    <Button
                                                        Padding="16,8"
                                                        HorizontalContentAlignment="Stretch"
                                                        Command="{Binding StrategyComponent.BilibiliStrategyCommand}"
                                                        CommandParameter="{Binding Avatars.CurrentItem}"
                                                        Style="{ThemeResource SettingButtonStyle}"
                                                        Visibility="{Binding StrategyComponent.IsBilibiliAvailable}">
                                                        <Grid ColumnSpacing="16">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>
                                                            <Border
                                                                Grid.Column="0"
                                                                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                                                CornerRadius="4">
                                                                <Image
                                                                    Width="24"
                                                                    Height="24"
                                                                    Source="ms-appx:///Resource/ThirdParty/bilibili128.png"/>
                                                            </Border>

                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarStrategyBilibiliButtonLabel}"
                                                                TextWrapping="NoWrap"/>
                                                        </Grid>
                                                    </Button>
                                                    <Button
                                                        Padding="16,8"
                                                        HorizontalContentAlignment="Stretch"
                                                        Command="{Binding StrategyComponent.OverseaStrategyCommand}"
                                                        CommandParameter="{Binding Avatars.CurrentItem}"
                                                        Style="{ThemeResource SettingButtonStyle}">
                                                        <Grid ColumnSpacing="16">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>
                                                            <Border
                                                                Grid.Column="0"
                                                                Background="{ThemeResource SolidBackgroundFillColorBaseBrush}"
                                                                CornerRadius="4">
                                                                <Image
                                                                    Width="24"
                                                                    Height="24"
                                                                    Source="ms-appx:///Resource/ThirdParty/hoyolab128.png"/>
                                                            </Border>

                                                            <TextBlock
                                                                Grid.Column="1"
                                                                VerticalAlignment="Center"
                                                                Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarStrategyOverseaButtonLabel}"
