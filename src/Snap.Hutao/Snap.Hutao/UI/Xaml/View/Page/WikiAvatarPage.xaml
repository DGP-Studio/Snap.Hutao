                                                <!--  天赋  -->
                                                <Border Padding="16" Style="{ThemeResource BorderShimmerStyle}">
                                                    <shuxvs:SkillPivot ItemTemplate="{StaticResource SkillDataTemplate}" Skills="{Binding Avatars.CurrentItem.SkillDepot.CompositeSkills}"/>
                                                </Border>

                                                <!--  命座  -->
                                                <Border Padding="16" Style="{ThemeResource BorderShimmerStyle}">
                                                    <shuxvs:SkillPivot ItemTemplate="{StaticResource TalentDataTemplate}" Skills="{Binding Avatars.CurrentItem.SkillDepot.Talents}"/>
                                                </Border>

                                                <!--  搭配  -->
                                                <Border
                                                    Padding="16"
                                                    Style="{ThemeResource BorderShimmerStyle}"
                                                    Visibility="{Binding Avatars.CurrentItem.CollocationView, Converter={StaticResource EmptyObjectToVisibilityConverter}}">
                                                    <Grid ColumnSpacing="8" RowSpacing="8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock
                                                            Grid.Row="0"
                                                            Grid.Column="0"
                                                            Style="{StaticResource BaseTextBlockStyle}"
                                                            Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarTeamCombinationHeader}"/>
                                                        <TextBlock
                                                            Grid.Row="0"
                                                            Grid.Column="1"
                                                            Style="{StaticResource BaseTextBlockStyle}"
                                                            Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarWeaponCombinationHeader}"/>
                                                        <TextBlock
                                                            Grid.Row="0"
                                                            Grid.Column="2"
                                                            Style="{StaticResource BaseTextBlockStyle}"
                                                            Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarArtifactSetCombinationHeader}"/>
                                                        <ItemsControl
                                                            Grid.Row="1"
                                                            Grid.Column="0"
                                                            ItemTemplate="{StaticResource CollocationTemplate}"
                                                            ItemsPanel="{StaticResource StackPanelSpacing4Template}"
                                                            ItemsSource="{Binding Avatars.CurrentItem.CollocationView.Avatars}"/>
                                                        <ItemsControl
                                                            Grid.Row="1"
                                                            Grid.Column="1"
                                                            ItemTemplate="{StaticResource CollocationTemplate}"
                                                            ItemsPanel="{StaticResource StackPanelSpacing4Template}"
                                                            ItemsSource="{Binding Avatars.CurrentItem.CollocationView.Weapons}"/>
                                                        <ItemsControl
                                                            Grid.Row="1"
                                                            Grid.Column="2"
                                                            ItemTemplate="{StaticResource CollocationReliquaryTemplate}"
                                                            ItemsPanel="{StaticResource StackPanelSpacing4Template}"
                                                            ItemsSource="{Binding Avatars.CurrentItem.CollocationView.ReliquarySets}"/>
                                                    </Grid>
                                                </Border>

                                                <!--  立绘  -->
                                                <Border Padding="16" Style="{ThemeResource BorderShimmerStyle}">
                                                    <Grid RowSpacing="16">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition/>
                                                            <RowDefinition Height="auto"/>
                                                        </Grid.RowDefinitions>

                                                        <Border Grid.Row="0" Style="{ThemeResource BorderShimmerStyle}">
                                                            <cwc:ConstrainedBox AspectRatio="2048:1024">
                                                                <Grid>
                                                                    <shuxci:CachedImage Source="{Binding Avatars.CurrentItem.Icon, Converter={StaticResource GachaAvatarImgConverter}}" Visibility="{Binding Avatars.CurrentItem.CostumesView.CurrentItem.IsDefault}"/>
                                                                    <shuxci:CachedImage Source="{Binding Avatars.CurrentItem.CostumesView.CurrentItem.FrontIcon, Converter={StaticResource CostumeConverter}}" Visibility="{Binding Avatars.CurrentItem.CostumesView.CurrentItem.IsDefault, Converter={StaticResource BoolToVisibilityRevertConverter}}"/>
                                                                </Grid>
                                                            </cwc:ConstrainedBox>
                                                        </Border>

                                                        <FlipView
                                                            x:Name="CostumeFlipView"
                                                            Grid.Row="1"
                                                            Height="108"
                                                            Padding="7,7,0,7"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalContentAlignment="Center"
                                                            Background="{ThemeResource LayerOnAcrylicFillColorDefaultBrush}"
                                                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                            BorderThickness="1"
                                                            ItemTemplate="{StaticResource CostumeTemplate}"
                                                            ItemsSource="{Binding Avatars.CurrentItem.CostumesView}"
                                                            SelectedItem="{Binding Avatars.CurrentItem.CostumesView.CurrentItem, Mode=TwoWay}"/>
                                                        <PipsPager
                                                            Grid.Row="1"
                                                            Height="16"
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Bottom"
                                                            NumberOfPages="{Binding Avatars.CurrentItem.CostumesView.Count, FallbackValue={x:Null}}"
                                                            SelectedPageIndex="{x:Bind CostumeFlipView.SelectedIndex, Mode=TwoWay, Converter={StaticResource RangedInt32Converter}}"/>
                                                    </Grid>
                                                </Border>

                                                <!--  名片  -->
                                                <Border>
                                                    <Border.Resources>
                                                        <!--  ReSharper disable Xaml.RedundantResource  -->
                                                        <SolidColorBrush x:Key="ExpanderContentBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBackground" Color="{ThemeResource ControlAltFillColorSecondary}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBorderPointerOverBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <!--  ReSharper restore Xaml.RedundantResource  -->
                                                    </Border.Resources>
                                                    <Expander
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch"
                                                        Background="{ThemeResource ControlAltFillColorSecondaryBrush}"
                                                        Header="{shuxm:ResourceString Name=ViewPageWiKiAvatarNameCardHeader}"
                                                        IsExpanded="True">
                                                        <Grid DataContext="{Binding Avatars.CurrentItem.NameCard}" RowSpacing="16">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition/>
                                                            </Grid.RowDefinitions>

                                                            <Grid
                                                                Height="90"
                                                                CornerRadius="45"
                                                                Style="{ThemeResource GridCardStyle}">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto"/>
                                                                    <ColumnDefinition/>
                                                                </Grid.ColumnDefinitions>
                                                                <shuxci:CachedImage
                                                                    Grid.ColumnSpan="2"
                                                                    Height="90"
                                                                    Margin="0,0,0,0"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Center"
                                                                    Source="{Binding PicturePrefix, Converter={StaticResource AvatarNameCardPicAlphaConverter}}"
                                                                    Stretch="Uniform"/>
                                                                <Grid
                                                                    Grid.Column="0"
                                                                    MaxHeight="70"
                                                                    Margin="10,0,0,0">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <shuxci:CachedImage
                                                                        Grid.RowSpan="2"
                                                                        Grid.Column="0"
                                                                        Source="https://api.snapgenshin.com/static/raw/AvatarIconCircle/UI_AvatarIcon_71045_Circle.png"
                                                                        Stretch="Uniform"/>
                                                                </Grid>
                                                            </Grid>

                                                            <Border Grid.Row="1" CornerRadius="{ThemeResource OverlayCornerRadius}">
                                                                <shuxci:CachedImage Source="{Binding PicturePrefix, Converter={StaticResource AvatarNameCardPicConverter}}" Stretch="Uniform"/>
                                                            </Border>

                                                            <Grid
                                                                Grid.Row="1"
                                                                Margin="16"
                                                                Padding="16"
                                                                HorizontalAlignment="Stretch"
                                                                VerticalAlignment="Bottom"
                                                                ColumnSpacing="16"
                                                                Style="{ThemeResource AcrylicSecondaryGridCardStyle}">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="auto"/>
                                                                    <ColumnDefinition/>
                                                                </Grid.ColumnDefinitions>
                                                                <shuxc:ItemIcon
                                                                    Grid.Column="0"
                                                                    Width="80"
                                                                    Height="80"
                                                                    VerticalAlignment="Top"
                                                                    Icon="{Binding Icon, Converter={StaticResource AvatarNameCardIconConverter}}"
                                                                    Quality="QUALITY_PURPLE"/>


                                                                <StackPanel
                                                                    Grid.Column="1"
                                                                    VerticalAlignment="Center"
                                                                    Spacing="8">
                                                                    <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Text="{Binding Name}"/>
                                                                    <TextBlock
                                                                        Text="{Binding Description}"
                                                                        TextTrimming="None"
                                                                        TextWrapping="Wrap"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Grid>
                                                    </Expander>
                                                </Border>

                                                <!--  游迹  -->
                                                <Border Visibility="{Binding Avatars.CurrentItem.TraceEffect, Converter={StaticResource EmptyObjectToVisibilityConverter}}">
                                                    <Border.Resources>
                                                        <!--  ReSharper disable Xaml.RedundantResource  -->
                                                        <SolidColorBrush x:Key="ExpanderContentBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBackground" Color="{ThemeResource ControlAltFillColorSecondary}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBorderPointerOverBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <!--  ReSharper restore Xaml.RedundantResource  -->
                                                    </Border.Resources>
                                                    <Expander
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch"
                                                        Background="{ThemeResource ControlAltFillColorSecondaryBrush}"
                                                        Header="{shuxm:ResourceString Name=ViewPageWiKiAvatarTraceEffectHeader}"
                                                        IsExpanded="True">
                                                        <Grid DataContext="{Binding Avatars.CurrentItem.TraceEffect}">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>
                                                            <shuxc:ItemIcon
                                                                Grid.Column="0"
                                                                Icon="{Binding Icon, Converter={StaticResource AvatarTraceEffectIconConverter}}"
                                                                Quality="QUALITY_NONE"/>
                                                            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                                                <TextBlock Text="{Binding Name}" TextWrapping="Wrap"/>
                                                                <TextBlock
                                                                    Margin="0,16,0,0"
                                                                    Text="{Binding Description}"
                                                                    TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Expander>
                                                </Border>

                                                <!--  料理  -->
                                                <Border Visibility="{Binding Avatars.CurrentItem.CookBonusView, Converter={StaticResource EmptyObjectToVisibilityConverter}}">
                                                    <Border.Resources>
                                                        <!--  ReSharper disable Xaml.RedundantResource  -->
                                                        <SolidColorBrush x:Key="ExpanderContentBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBackground" Color="{ThemeResource ControlAltFillColorSecondary}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBorderPointerOverBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <!--  ReSharper restore Xaml.RedundantResource  -->
                                                    </Border.Resources>
                                                    <Expander
                                                        HorizontalAlignment="Stretch"
                                                        HorizontalContentAlignment="Stretch"
                                                        Background="{ThemeResource ControlAltFillColorSecondaryBrush}"
                                                        Header="{shuxm:ResourceString Name=ViewPageWiKiAvatarFoodHeader}"
                                                        IsExpanded="True">
                                                        <Grid DataContext="{Binding Avatars.CurrentItem.CookBonusView}">
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition Height="auto"/>
                                                                <RowDefinition Height="auto"/>
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition Width="auto"/>
                                                                <ColumnDefinition/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                Grid.Column="0"
                                                                Style="{StaticResource BaseTextBlockStyle}"
                                                                Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarSpecialFoodTitle}"/>
                                                            <TextBlock
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                Margin="16,0,0,0"
                                                                Style="{StaticResource BaseTextBlockStyle}"
                                                                Text="{shuxm:ResourceString Name=ViewPageWiKiAvatarOriginalFoodTitle}"/>
                                                            <StackPanel
                                                                Grid.Row="0"
                                                                Grid.RowSpan="4"
                                                                Grid.Column="2"
                                                                Margin="16,0,0,0">
                                                                <TextBlock Text="{Binding Item.Description}" TextWrapping="Wrap"/>
                                                                <TextBlock
                                                                    Margin="0,16,0,0"
                                                                    Text="{Binding Item.EffectDescription}"
                                                                    TextWrapping="Wrap"/>
                                                            </StackPanel>
                                                            <shuxcc:VerticalCard
                                                                Grid.Row="1"
                                                                Grid.Column="0"
                                                                Margin="0,16,0,0">
                                                                <shuxcc:VerticalCard.Top>
                                                                    <shuxc:ItemIcon Icon="{Binding Item.Icon, Converter={StaticResource ItemIconConverter}}" Quality="{Binding Item.RankLevel}"/>
                                                                </shuxcc:VerticalCard.Top>
                                                                <shuxcc:VerticalCard.Bottom>
                                                                    <TextBlock
                                                                        MaxWidth="80"
                                                                        Text="{Binding Item.Name}"
                                                                        TextTrimming="CharacterEllipsis"
                                                                        TextWrapping="NoWrap"/>
                                                                </shuxcc:VerticalCard.Bottom>
                                                            </shuxcc:VerticalCard>
                                                            <shuxcc:VerticalCard
                                                                Grid.Row="1"
                                                                Grid.Column="1"
                                                                Margin="16,16,0,0">
                                                                <shuxcc:VerticalCard.Top>
                                                                    <shuxc:ItemIcon Icon="{Binding OriginItem.Icon, Converter={StaticResource ItemIconConverter}}" Quality="{Binding OriginItem.RankLevel}"/>
                                                                </shuxcc:VerticalCard.Top>
                                                                <shuxcc:VerticalCard.Bottom>
                                                                    <TextBlock
                                                                        MaxWidth="80"
                                                                        Text="{Binding OriginItem.Name}"
                                                                        TextTrimming="CharacterEllipsis"
                                                                        TextWrapping="NoWrap"/>
                                                                </shuxcc:VerticalCard.Bottom>
                                                            </shuxcc:VerticalCard>
                                                        </Grid>
                                                    </Expander>
                                                </Border>

                                                <!--  资料  -->
                                                <Border>
                                                    <Border.Resources>
                                                        <!--  ReSharper disable Xaml.RedundantResource  -->
                                                        <SolidColorBrush x:Key="ExpanderContentBackground" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="ExpanderContentBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="SettingsCardBackground" Color="{ThemeResource ControlAltFillColorSecondary}"/>
                                                        <SolidColorBrush x:Key="SettingsCardBackgroundDisabled" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="SettingsCardBackgroundPointerOver" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="SettingsCardBackgroundPressed" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="SettingsCardBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ToggleButtonBackground" Color="{ThemeResource ControlAltFillColorSecondary}"/>
                                                        <!--  ReSharper restore Xaml.RedundantResource  -->
                                                    </Border.Resources>
                                                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                                        <cwc:SettingsExpander
                                                            Header="{shuxm:ResourceString Name=ViewPageWiKiAvatarQuotesHeader}"
                                                            ItemTemplate="{StaticResource FetterStoryTemplate}"
                                                            ItemsSource="{Binding Avatars.CurrentItem.FetterInfo.Fetters}"/>
                                                    </ScrollViewer>
                                                </Border>

                                                <!--  故事  -->
                                                <Border>
                                                    <Border.Resources>
                                                        <!--  ReSharper disable Xaml.RedundantResource  -->
                                                        <SolidColorBrush x:Key="ExpanderContentBackground" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="ExpanderContentBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ExpanderHeaderBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="SettingsCardBackground" Color="{ThemeResource ControlAltFillColorSecondary}"/>
                                                        <SolidColorBrush x:Key="SettingsCardBackgroundDisabled" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="SettingsCardBackgroundPointerOver" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="SettingsCardBackgroundPressed" Color="Transparent"/>
                                                        <SolidColorBrush x:Key="SettingsCardBorderBrush" Color="{ThemeResource ControlStrokeColorDefault}"/>
                                                        <SolidColorBrush x:Key="ToggleButtonBackground" Color="{ThemeResource ControlAltFillColorSecondary}"/>
                                                        <!--  ReSharper restore Xaml.RedundantResource  -->
                                                    </Border.Resources>
                                                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                                        <cwc:SettingsExpander
                                                            Header="{shuxm:ResourceString Name=ViewPageWiKiAvatarStoriesHeader}"
                                                            ItemTemplate="{StaticResource FetterStoryTemplate}"
                                                            ItemsSource="{Binding Avatars.CurrentItem.FetterInfo.FetterStories}"/>
                                                    </ScrollViewer>
                                                </Border>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Grid>
                                </SplitView.Content>
                            </SplitView>
                        </Border>
                    </Border>
                </cwc:Case>
                <cwc:Case Value="Grid">
                    <Border Margin="16,0,16,16" cw:Effects.Shadow="{ThemeResource CompatCardShadow}">
                        <Border Style="{ThemeResource AcrylicBorderCardStyle}">
                            <Grid Padding="16,16,4,-6">
                                <StackPanel VerticalAlignment="Center" Visibility="{Binding Avatars.Count, Converter={StaticResource Int32ToVisibilityRevertConverter}}">
                                    <shuxci:CachedImage
                                        Height="120"
                                        MinWidth="{ThemeResource SettingsCardContentControlMinWidth}"
                                        Source="{StaticResource UI_EmotionIcon89}"/>
                                    <TextBlock
                                        Margin="0,5,0,21"
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource SubtitleTextBlockStyle}"
                                        Text="{shuxm:ResourceString Name=ControlAutoSuggestBoxNotFoundValue}"/>
                                </StackPanel>
                                <GridView
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left"
                                    ItemContainerStyle="{StaticResource LargeGridViewItemStyle}"
                                    ItemTemplate="{StaticResource AvatarGridTemplate}"
                                    ItemsSource="{Binding Avatars}"
                                    SelectedItem="{Binding Avatars.CurrentItem, Mode=TwoWay}"
                                    SelectionMode="Single"
                                    Visibility="{Binding Avatars.Count, Converter={StaticResource Int32ToVisibilityConverter}}">
                                    <mxi:Interaction.Behaviors>
                                        <shuxb:SelectedItemInViewBehavior/>
                                    </mxi:Interaction.Behaviors>
                                </GridView>
                            </Grid>
                        </Border>
                    </Border>
                </cwc:Case>
            </cwc:SwitchPresenter>
        </Grid>

    </shuxc:StandardView>
</shuxc:ScopedPage>