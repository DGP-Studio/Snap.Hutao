                                                To="{ThemeResource SegmentedItemDisabledOpacity}"
                                                Duration="0:0:0.083"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
